@model LUIS_pizzaorder.Models.user

@{
    ViewBag.Title = "HomeStart";
}



<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Agency Page Template</title>
    <!-- Bootstrap -->
    <link href="css/bootstrap.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="text-center">Welcome To Pizza Eats</h1>
                        <p class="text-center">If you would like to navigate through our site please type the name of the page or click one of these Icons!</p>
                        
                            <div class="form-group">
                                <center>
                                   
                                        @Html.TextBox("String",null,new {@class="wide", @placeholder= "Naviagte Site Using Search Bar!"}) <input type="submit" value="Search" color="#007ad7" id="txt" />
                                    
                                   </center>
                                
                            </div>
                       
                        
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section>

    </section>
    <section>
        <div class="container">
            <div class="row"> </div>
        </div>
        <div class="container ">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12 text-center">

                   
                    <img class="rounded-circle" alt="100x100" style="width: 100px; height: 100px;" src="@Url.Content("~/Content/img/vector-signin.png")" data-holder-rendered="true">

                    <h3>Log In</h3>
                    <p><a class="btn btn-link" @Html.ActionLink("Click Here", "Login", "User") »</a></p>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 text-center">
                    <img class="rounded-circle" alt="100x100" style="width: 100px; height: 100px;" src="@Url.Content("~/Content/img/vector-signUp.png")" data-holder-rendered="true">
                    <h3>Sign Up</h3>
                    <p><a class="btn btn-link" @Html.ActionLink("Click Here", "Registration","User") »</a></p>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 text-center">
                    <img class="rounded-circle" alt="100x100" style="width: 100px; height: 100px;" src="@Url.Content("~/Content/img/vector-placeOrder.png")" data-holder-rendered="true">
                    <h3>Place Order</h3>
                    <p><a class="btn btn-link" @Html.ActionLink("Click Here", "Index") »</a></p>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
